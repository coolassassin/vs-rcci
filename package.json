{
  "name": "vs-rcci",
  "displayName": "React component tool",
  "description": "⚛️⭐ Interactive and customizable tool to create and update react component",
  "publisher": "KamenskikhDmitriy",
  "repository": "https://github.com/coolassassin/vs-rcci",
  "version": "0.6.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Extension Packs",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onCommand:vs-rcci.create",
    "onCommand:vs-rcci.update"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "vs-rcci",
      "properties": {
        "vs-rcci.root": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Specifies the folder path containing the project with reactcci package"
        }
      }
    },
    "commands": [
      {
        "command": "vs-rcci.create",
        "title": "Create component"
      },
      {
        "command": "vs-rcci.update",
        "title": "Update component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "vs-rcci.create",
          "group": "reactcci"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "vs-rcci.update",
          "group": "reactcci"
        }
      ],
      "commandPalette": [
        {
          "command": "vs-rcci.create",
          "when": "false"
        },
        {
          "command": "vs-rcci.update",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prettier-fix": "prettier 'src/**/*.ts' --write",
    "lint-fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^17.0.15",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "prettier": "^2.5.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "keywords": [
    "react",
    "react-native",
    "component",
    "create",
    "generator",
    "generate",
    "configurable",
    "gen",
    "scaffolding",
    "make",
    "tool",
    "dev",
    "js",
    "javascript",
    "typescript"
  ]
}
